<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <data>
        <variable
                name="viewmodel"
                type="com.example.homework1.viewmodel.fragments.DetailsViewModel"
        />
        <variable
                name="position"
                type="Integer"/>
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF0000"
            android:weightSum="10"
            android:layout_margin="10dp"
    >
        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:scaleType="fitCenter"
                app:imageUrl="@{viewmodel.getPersonAtPosition(position).avatar}"
                android:layout_margin="10dp"
                android:background="#FFFF00"
        />

        <TextView
                android:text="@{viewmodel.getPersonAtPosition(position).name}"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_margin="10dp"
                android:background="#FFFF00"
        />
        <TextView
                android:text="@{viewmodel.getPersonAtPosition(position).position}"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_margin="10dp"
                android:background="#FFFF00"
        />
        <TextView
                android:text="@{viewmodel.getPersonAtPosition(position).current_project}"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_margin="10dp"
                android:background="#FFFF00"
        />
        <TextView
                android:text="@{viewmodel.getPersonAtPosition(position).current_topic}"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_margin="10dp"
                android:background="#FFFF00"
        />


    </LinearLayout>
</layout>